<div class="container mt-5">
  <h2 class="text-center">Login</h2>
  {{#if error}}
    <div class="alert alert-danger text-center">{{error}}</div>
  {{/if}}
  <form method="POST" action="/login">
    <input class="form-control my-2" name="email" placeholder="Email" required />
    <input class="form-control my-2" type="password" name="password" placeholder="Password" required />
    <button class="btn btn-primary w-100">Login</button>
  </form>
  <p class="text-center mt-3">No account? <a href="/register">Register here</a></p>
</div>
